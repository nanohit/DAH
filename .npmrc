# Reduce npm verbosity
loglevel=warn

# Don't generate package-lock.json if you're using yarn
package-lock=false

# Disable audit reports which can be large
audit=false

# Disable automatic update checks
update-notifier=false

# Reduce the size of the cache
cache-min=3600

# Don't save exact versions in package.json
save-exact=false

# Don't include unnecessary metadata
git-tag-version=false

# Optimize for CI environments
prefer-offline=true 